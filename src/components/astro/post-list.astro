---
interface Props {
  post: any
  lang: string
  dateFormat?: string
}

const { post, lang, dateFormat = "default"} = Astro.props
import { formatDate } from "~/types/utils"
---

<a
  href={`/${lang}/posts/${post?.id}/`}
  class="my-3 visited:text-purple-500/90 md:my-2"
>
  <p
    class={`truncate text-gray-500 dark:text-gray-400 text-sm`}
  >
    <time>{formatDate(post?.data.pubDate, dateFormat)}</time>
  </p>
  <p class="line-clamp-2 text-lg hover:underline">{post?.data.title}</p>
</a>
